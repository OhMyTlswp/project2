{
  "parser": "babel-eslint",
  "extends": ["standard", "standard-react"],
  "rules": {
    // enable additional rules
    "indent": ["error", 2],
    "linebreak-style": "off",
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "jsx-quotes": ["error", "prefer-double"],
    "space-before-function-paren": "off",
    "no-cond-assign": ["error", "always"],
    "comma-dangle": "off",

    // disable rules from base configurations
    "no-console": "off"
  },
  "env": {
    "browser": true,
    "node": true
  }
}
